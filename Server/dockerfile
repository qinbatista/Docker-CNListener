FROM python:3.8.13-alpine3.16 as python

# -------------------
# Build arguments
# -------------------
ARG AWS_KEY
ARG AWS_SECRET
ARG IPV4_DOMAIN_UPDATE_LAMBDA
ARG SERVER_DOMAIN_NAME

# Copy the codebase
COPY . /

# -------------------
# Environment variables for Python
# -------------------
ENV IPV4_DOMAIN_UPDATE_LAMBDA=${IPV4_DOMAIN_UPDATE_LAMBDA}
ENV SERVER_DOMAIN_NAME=${SERVER_DOMAIN_NAME}

# Install dependencies and upgrade pip
RUN pip3 install --upgrade pip
RUN pip3 install -r requirements.txt

# Install and configure AWS CLI
RUN apk add --no-cache aws-cli
RUN aws configure set aws_access_key_id "${AWS_KEY}" \
    && aws configure set aws_secret_access_key "${AWS_SECRET}" \
    && aws configure set default.region us-west-2 \
    && aws configure set region us-west-2 --profile testing

# Install additional packages
RUN apk add --no-cache curl supervisor

WORKDIR /

# Configure supervisord to run UDPServer.py
RUN echo "[supervisord]" > /etc/supervisord.conf \
    && echo "nodaemon=true" >> /etc/supervisord.conf \
    && echo "[program:UDPServer]" >> /etc/supervisord.conf \
    && echo "command=python3 /UDPServer.py" >> /etc/supervisord.conf

# Expose UDP port 7171 for the server
EXPOSE 7171/udp

CMD ["supervisord", "-c", "/etc/supervisord.conf"]